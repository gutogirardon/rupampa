<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_02"
            android:layout_below="@+id/layout_01"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:text="Gostou da Refeição?"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0in"
                android:id="@+id/textView19"
                android:layout_centerHorizontal="true" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gostei"
                android:id="@+id/button"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/textView19"
                android:layout_alignParentRight="true"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃO GOSTEI"
                android:id="@+id/button2"
                android:layout_below="@+id/textView19"
                android:layout_alignParentLeft="true"
                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_01"
            android:layout_below="@+id/imageViewLogo"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp">

            <TextView
                android:text="Data"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardapio_data"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


            <TextView
                android:text="Refeição"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:id="@+id/cardapio_refeicao"
                android:layout_below="@+id/cardapio_data"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Cardápio"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:id="@+id/cardapio_cardapio"
                android:layout_below="@+id/cardapio_refeicao"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:text="Prato Principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:id="@+id/text_PratoPrincipal"
                android:layout_below="@+id/cardapio_cardapio"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Sobremesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Sobremesa"
                android:layout_below="@+id/text_Salada"
                android:layout_alignStart="@+id/text_Guarnicao" />

            <TextView
                android:text="Acompanhamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Acompanhamento"
                android:layout_below="@+id/text_PratoPrincipal"
                android:layout_alignStart="@+id/text_PratoPrincipal" />

            <TextView
                android:text="Guarnição"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Guarnicao"
                android:layout_below="@+id/text_Acompanhamento"
                android:layout_alignStart="@+id/text_Acompanhamento" />

            <TextView
                android:text="Suco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Suco"
                android:layout_below="@+id/text_Sobremesa"
                android:layout_alignStart="@+id/text_Sobremesa" />

            <TextView
                android:text="Vegetariana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_OpcaoVeg"
                android:layout_below="@+id/text_Suco"
                android:layout_alignStart="@+id/text_Suco" />

            <TextView
                android:text="Prato Principal:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_PratoPrincipal"
                android:layout_alignParentStart="true"
                android:id="@+id/textView13" />

            <TextView
                android:text="Acompanhamento:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:id="@+id/textView14" />

            <TextView
                android:text="Guarnição:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true"
                android:id="@+id/textView15" />

            <TextView
                android:text="Saladas:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_Salada"
                android:layout_alignParentStart="true"
                android:id="@+id/textView16" />

            <TextView
                android:text="Sobremesa:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView16"
                android:layout_alignParentStart="true"
                android:id="@+id/textView17" />

            <TextView
                android:text="Suco:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_Sobremesa"
                android:layout_alignParentStart="true"
                android:id="@+id/textView18" />

            <TextView
                android:text="Opção Vegetariana:"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:id="@+id/textView20" />

            <TextView
                android:text="Saladas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_Salada"
                android:layout_below="@+id/text_Guarnicao"
                android:layout_alignStart="@+id/text_Guarnicao" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="120dp"
            android:layout_height="116dp"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageViewSeta"
            android:layout_width="110dp"
            android:layout_height="85dp"
            android:src="@drawable/setaesquerda"
            android:layout_marginEnd="38dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageViewLogo" />


    </RelativeLayout>
</ScrollView>