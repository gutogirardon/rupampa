<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
 android:background="@color/white"
    tools:context="unipampa.edu.br.rupampa.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="O RUPAMPA permite a visualização rápida e fácil do cardápio oferecido pelo Restaurante Universitário Talheres do Pampa."
        android:textColor="#3CB371"
        android:id="@+id/textView2"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/buttonEnviarSugestao"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Reclamação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonReclamacao"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:onClick="abrirReclamacao"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Envie seu feedback sobre o restaurante"
        android:textColor="#3CB371"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_above="@+id/buttonElogio"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ELOGIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonElogio"
        android:background="#9ACD32"
        android:onClick="abrirElogio"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3" />

    <Button
        android:text="Sugestao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:background="#9ACD32"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonSugestao"
        android:onClick="abrirSugestao"/>

    <Button
        android:id="@+id/buttonEnviarSugestao"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="CONSULTAR O CARDÁPIO"
        android:background="#9ACD32"
        android:onClick="abrirCardapioList"
        android:layout_marginBottom="55dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
