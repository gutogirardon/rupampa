<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_view_adapter"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unipampa.edu.br.rupampa.view.ListViewAdapter">



    <RelativeLayout
        android:id="@+id/telinha1"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Data"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_nomeRefeicao" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/telinha2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/telinha1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/text_PratoPrincipal"
            android:text="Prato Principal" />

        <TextView
            android:text="Acompanhamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Acompanhamento"
            android:layout_below="@id/text_PratoPrincipal"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Guarnição"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Guarnicao"
            android:layout_below="@id/text_Acompanhamento"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Suco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Suco"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_Sobremesa" />

        <TextView
            android:text="Saladas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Salada"
            android:layout_below="@+id/text_Guarnicao"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Sobremesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_Sobremesa"
            android:layout_below="@+id/text_Salada"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="OpcVegetariana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_OpcaoVeg"
            android:layout_below="@+id/text_Suco"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
